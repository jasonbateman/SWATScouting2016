<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.batemanj16.swatscouting2016.AutoScouting">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Autonomous Scoring"
            android:id="@+id/txt_title"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Auto Information"
            android:id="@+id/txt_titleInput"
            android:layout_row="1"
            android:layout_column="0" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_row="1"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Summary"
            android:id="@+id/txt_titleSummary"
            android:layout_row="1"
            android:layout_column="4" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SpyBot"
            android:id="@+id/switch_spy"
            android:layout_row="2"
            android:layout_column="0"
            android:checked="false"
            android:onClick="refresh"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Positon"
            android:id="@+id/txt_position"
            android:layout_row="2"
            android:layout_column="4" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reach?"
            android:id="@+id/switch_reach"
            android:layout_row="3"
            android:layout_column="0"
            android:checked="false"
            android:onClick="refresh"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Defense Status"
            android:id="@+id/txt_dfStatus"
            android:layout_row="3"
            android:layout_column="4" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cross?"
            android:id="@+id/switch_cross"
            android:layout_row="4"
            android:layout_column="0"
            android:checked="false"
            android:onClick="refresh"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Scoring Status"
            android:id="@+id/txt_scoreStatus"
            android:layout_row="4"
            android:layout_column="4" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Low?"
            android:id="@+id/switch_low"
            android:layout_row="5"
            android:layout_column="0"
            android:checked="false"
            android:onClick="refresh"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High"
            android:id="@+id/switch_high"
            android:layout_row="6"
            android:layout_column="0"
            android:checked="false"
            android:onClick="refresh"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Auto"
            android:id="@+id/btn_endAuto"
            android:layout_row="8"
            android:layout_column="4" />

    </GridLayout>
</LinearLayout>
